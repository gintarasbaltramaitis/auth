				 <button  onclick=trinti("<%= pamoka[i]._id %>") class="btn btn-primary btn-xl") >Trinti</button>
				  <% if(pamoka[i].publikuota == "false"){%>
				  
				  <button onclick=publikuoti("<%= pamoka[i]._id %>") class="btn btn-primary btn-xl">Publikuoti</button>
				  <% } else {%>
				  <button onclick=nebepublikuoti("<%= pamoka[i]._id %>") class="btn btn-primary btn-xl">Nebeblikuoti</button>
