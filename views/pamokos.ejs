<script>

function trinti(lygis) {
fetch('/pamokos/lygis', {
    method: 'delete',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify({
      '_id': lygis
	  
    })
  }).then(function (response) {
    window.location.reload()
  })
	
}
function nebepublikuoti(lygis) {
fetch('/nebepublikuoti', {
    method: 'put',
    headers: {'Content-Type': 'application/json'},
    body: JSON.stringify({
      '_id': lygis
    })
  })
  .then(response => {
    if (response.ok) {return response.json()
	}
		
  })
  .then(data => {
    console.log(data)
	window.location.reload()
  })
  

}
function publikuoti(lygis) {
fetch('/publikuoti', {
    method: 'put',
    headers: {'Content-Type': 'application/json'},
    body: JSON.stringify({
      '_id': lygis
    })
  })
  .then(response => {
    if (response.ok) {return response.json()
	}
		
  })
  .then(data => {
    console.log(data)
	window.location.reload()
  })
  

}
</script>
